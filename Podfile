 	pod 'GooglePlaces', '~> 2.1.0'

    pod 'CardIO'
    pod 'SVProgressHUD'

    pod 'FacebookCore'
    pod 'FacebookLogin'
    pod 'FacebookShare'
    pod 'Stripe', '~> 9.2.0'
    pod 'Fabric'
    pod 'CreditCardForm', :git => 'https://github.com/orazz/CreditCardForm-iOS', branch: 'master'
    pod 'SwiftMessages', '~> 3.1.2'
    #pod 'PXGoogleDirections'
    pod 'SDWebImage/WebP', '~> 3.8.2'
    #pod 'EZLoadingActivity'
    pod 'libPhoneNumber-iOS', '~> 0.9.1'
    pod 'Crashlytics'
    pod 'TGPControls', '~> 2.0.0'
    pod 'DatePickerDialog', '~> 1.1.7'
    pod 'PMAlertController', '~> 2.0.1'
    
  # Pods for SIX Rider

  target ‘Arcane RiderTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target ‘Arcane RiderUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
